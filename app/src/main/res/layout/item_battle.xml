<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="20"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small">

    <TextView
        android:id="@+id/name_autobot_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:layout_gravity="center_vertical"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        tools:text="Optimus Prime" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ico_autobot_iv"
        android:layout_width="0dp"
        android:layout_height="@dimen/battle_icon"
        android:layout_weight="2"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_gravity="center"
        tools:src="@drawable/ic_autobot"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ico_fight_iv"
        android:layout_width="0dp"
        android:layout_height="@dimen/battle_icon"
        android:layout_weight="2"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_gravity="center"
        android:src="@drawable/ic_swords"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ico_decepticon_iv"
        android:layout_width="0dp"
        android:layout_height="@dimen/battle_icon"
        android:layout_weight="2"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_gravity="center"
        tools:src="@drawable/ic_decept"/>

    <TextView
        android:id="@+id/name_decepticon_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        tools:text="Optimus Prime" />

</LinearLayout>